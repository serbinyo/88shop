<script src="//www.google.com/recaptcha/api.js" type="text/javascript"></script>
<div class="captcha form-group required">
	<!-- <div class="captcha__title col-sm-12">* {{ text_captcha }}</div> -->
	{% if route|slice(0, 9) == 'checkout/' %}
		<label class="control-label" for="input-payment-captcha">{{ entry_captcha }}</label>
		<div id="input-payment-captcha" class="g-recaptcha" data-sitekey="{{ site_key }}"></div>
		{% if error_captcha %}
			<div class="text-danger">{{ error_captcha }}</div>
		{% endif %}
	{% else %}
		<label class="captcha__label col-sm-2 control-label">{{ text_captcha }}</label>
		<div class="col-sm-10">
			<div class="g-recaptcha" data-sitekey="{{ site_key }}" style="transform:scale(0.85); transform-origin:0;"></div>
			{% if error_captcha %}
				<div class="text-danger">{{ error_captcha }}</div>
			{% endif %}
		</div>
	{% endif %}
</div>