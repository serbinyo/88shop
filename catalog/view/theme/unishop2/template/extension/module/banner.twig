{% if banners %}
	<div id="banner-{{ module }}" class="banner">
		{% for banner in banners %}
			<div class="item text-center">
				{% if banner.link %}
					<a href="{{ banner.link }}" title="{{ banner.title }}">
						<img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive" />
						<div class="banner-label btn-primary">{{ banner.title }}</div>
					</a>
				{% else %}
					<img src="{{ banner.image }}" alt="{{ banner.title }}" title="{{ banner.title }}" class="img-responsive" />
				{% endif %}
			</div>
		{% endfor %}
	</div>
	<script>
		if($('#banner-{{ module }}').is(':visible')) {
			$('#banner-{{ module }}').addClass('owl-carousel').owlCarousel({
				items:1,
				nav:false,
				loop:true,
				autoplay:true,
				autoplayTimeout:3000,
				autoplayHoverPause:true,
				mouseDrag:{{ banners|length > 1 ? 'true' : 'false' }},
				navText: ['<i class="fa fa-chevron-left"></i>', '<i class="fa fa-chevron-right"></i>'],
			});
		}
	</script>
{% endif %}