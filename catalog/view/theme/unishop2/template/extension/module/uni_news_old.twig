{% if news %}
	{% if heading_title %}<div class="heading"><span>{{ heading_title }}</span></div>{% endif %}
	<div class="uni-module news-module news-{{ module }}">
		<div class="uni-module__wrapper">
			{% for news in news %}
				<div class="news-module__item uni-item">
					<div class="news-module__row row">
						{% if news.image %}
							<div class="news-module__image col-sm-5 col-lg-4 col-xxl-9">
								<img src="{{ news.image }}" loading="lazy" alt="{{ news.name }}" title="{{ news.name }}" data-href="{{ news.href }}" class="uni-href img-responsive" width="{{ img_width }}" height="{{ img_height }}" />
							</div>
						{% endif %}
						<div class="news-module__description col-sm-7 col-lg-8 col-xxl-11">
							<a class="news-module__name" href="{{ news.href }}" title="{{ news.name }}">{{ news.name }}</a>
							<p class="news-module__text">
								{{ news.description }}
								<a title="{{ text_more }}" data-toggle="tooltip" data-href="{{ news.href }}" class="news-module__more uni-href">&rarr;</a>
							</p>
						</div>
					</div>
					<div class="row">
						<div class="news-module__category col-xs-5 col-sm-5 col-lg-4 col-xxl-9">
							{{  news.category_name  }}
						</div>
						<div class="news-module__posted posted">
							<i class="fa fa-calendar"></i>{{ news.posted }}
							<i class="fa fa-eye"></i>{{ news.viewed }}
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
	<script>
		$('.news-{{ module }}').uniModules({
			type:'{{ type_view is defined ? type_view : 'carousel' }}',
			items: {0:{items:1},580:{items:2},720:{items:2},1050:{items:2},1400:{items:3}},
			autoheight:['news-module__name', 'news-module__text'],
			loop:{{ news|length > 4 ? 'true' : 'false' }}
		});
	</script>
{% endif %}