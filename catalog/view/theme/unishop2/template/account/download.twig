{{ header }}
<div id="account-download" class="container">
	<ul class="breadcrumb">
		{% for key, breadcrumb in breadcrumbs %}
			{% if key+1 < breadcrumbs|length %}
				<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
			{% else %}
				<li>{{ breadcrumb.text }}</li>
			{% endif %}
		{% endfor %}
	</ul>
	<div class="row">
		{{ column_left }}
		{% if column_left and column_right %}
			{% set class = 'col-sm-4 col-md-6 col-lg-6 col-xxl-12' %}
		{% elseif column_left or column_right %}
			{% set class = 'col-sm-8 col-md-9 col-lg-9 col-xxl-16' %}
		{% else %}
			{% set class = 'col-sm-12' %}
		{% endif %}
		<div id="content" class="{{ class }}">
			{{ content_top }}
			<div class="heading-h1"><h1>{{ heading_title }}</h1></div>
			{% if downloads %}
				{% if column_left and column_right %}
					{% set class = 'col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xxl-6-1' %}
				{% elseif column_left or column_right %}
					{% set class = 'col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xxl-6-1' %}
				{% else %}
					{% set class = 'col-xs-12 col-sm-6 col-md-6 col-lg-4 col-xxl-6-1' %}
				{% endif %}
				<div class="account-download row row-flex">
					{% for download in downloads %}
						<div class="{{ class }}">
							<div class="account-download__item uni-item">
								<a href="{{ download.href }}" class="account-download__name">{{ download.name }}</a>
								<div class="account-download__description">
									<div class="account-download__description-item order-id"><div class="account-download__description-div"><span class="account-download__description-span">{{ column_order_id }}</span></div>{{ download.order_id }}</div>
									<div class="account-download__description-item size"><div class="account-download__description-div"><span class="account-download__description-span">{{ column_size }}</span></div>{{ download.size }}</div>
									<div class="account-download__description-item date-added"><div class="account-download__description-div"><span class="account-download__description-span">{{ column_date_added }}</span></div>{{ download.date_added }}</div>
								</div>
								<a href="{{ download.href }}" class="account-download__btn btn btn-lg btn-primary" title="{{ button_download }}"><i class="fas fa-cloud-download-alt"></i><span>{{ button_download }}</span></a>
							</div>
						</div>
					{% endfor %}
				</div>
				{{ pagination }}
			    <div class="pagination-text">{{ results }}</div>
			{% else %}
				<div class="div-text-empty">{{ text_empty }}</div>
			{% endif %}
			<div class="buttons clearfix hidden">
				<div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
			</div>
			{{ content_bottom }}
		</div>
		{{ column_right }}
	</div>
</div>
{{ footer }}